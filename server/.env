# Server Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=/api

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=24h

# Database Configuration (Turso)
TURSO_DB_URL=file:./dev.db
TURSO_DB_AUTH_TOKEN=your-turso-auth-token

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# RxDB Sync Configuration
SYNC_ENABLED=true
SYNC_BATCH_SIZE=100
SYNC_INTERVAL=1000

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true

# Error Reporting
SENTRY_DSN=your-sentry-dsn

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX=1000
